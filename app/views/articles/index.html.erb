<div class="row m-2">
    <h1>Articles</h1>
    <div class="col">  

        <%= Article.public_count %> articles ont été publiés !
        <% @articles.each do |article| %>
        <% unless article.archived? %>
        <div>
            <%= link_to article.title, article %>
        </div>
        <% if article.image? %>
            <p>
                <%= image_tag article.image_url %>
            </p>
        <% end %> 
        <% end %>
        <% end %>
    <div class="btn btn-secondary"><%= link_to "Ecrire un nouvel article", new_article_path, class:'bouton' %></div>        
    </div>
</div>






